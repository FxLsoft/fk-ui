{
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"sourceMap": true,
		"outDir": "dist",
		"module": "CommonJS",
		"target": "ES2015",
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"removeComments": false,
		"noImplicitAny": false,
		"importHelpers": true,
		"lib": ["DOM", "ES2020"]
	},
	"include": ["src"]
}
