{
	"extends": "../config/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "es",
		"target": "ES2015",
		"module": "ES2020",
		"moduleResolution": "node",
		"removeComments": true,
		"strict": true,
		"allowJs": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"importHelpers": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"jsx": "preserve",
		"types": ["vite/client"],
		"paths": {
			"@vue/shared": ["./node_modules/@vue/shared"]
		},
		"lib": ["ES2020", "DOM"]
	},
	"exclude": ["node_modules"],
	"include": ["src", "vite.config.ts", "plugins"]
}
